<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Lox Tribes Leaders -->
  <PawnKindDef ParentName="TribalBase" Name="Moka_TribeloxLeaderBase">
      <defName>Moka_TribeLox_Leader</defName>
      <label>cheiflox</label>
      <labelPlural>cheiflox</labelPlural>
      <factionLeader>true</factionLeader>
      <minGenerationAge>60</minGenerationAge>
      <maxGenerationAge Inherit="False">120</maxGenerationAge>
      <isFighter>false</isFighter>
      <gearHealthRange>1~1</gearHealthRange>
      <itemQuality>Good</itemQuality>
      <combatPower>20</combatPower>
      <apparelMoney>400~800</apparelMoney>
      <requiredWorkTags>
          <li>Social</li>
          <li>Intellectual</li>
      </requiredWorkTags>
      <useFactionXenotypes>false</useFactionXenotypes>
      <xenotypeSet>
        <xenotypeChances>
          <Moka_Headlox>999</Moka_Headlox>
        </xenotypeChances>
      </xenotypeSet>
      <initialWillRange>7~10</initialWillRange>
      <initialResistanceRange>15~21</initialResistanceRange>
  </PawnKindDef>

  <!-- Mid tier -->
  <PawnKindDef ParentName="TribalBase">
    <defName>Moka_Tribelox_Warrior</defName>
    <label>warrior</label>
    <combatPower>50</combatPower>
    <itemQuality>Poor</itemQuality>
    <canBeSapper>true</canBeSapper>
    <gearHealthRange>0.5~1.8</gearHealthRange>
    <apparelMoney>200~300</apparelMoney>
    <apparelRequired>
      <li>Apparel_WarVeil</li>
    </apparelRequired>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <weaponMoney>150~150</weaponMoney>
    <weaponTags>
      <li>NeolithicMeleeDecent</li>
    </weaponTags>
    <xenotypeSet>
      <xenotypeChances>
        <Moka_Pawloc>0.5</Moka_Pawloc>
      </xenotypeChances>
    </xenotypeSet>
    <initialWillRange>1~3</initialWillRange>
    <initialResistanceRange>5~9</initialResistanceRange>
  </PawnKindDef>

  <PawnKindDef ParentName="TribalBase" Name="Moka_Tribelox_Hunter">
    <defName>Moka_Tribelox_Hunter</defName>
    <label>hunter</label>
    <combatPower>60</combatPower>
    <backstoryFiltersOverride>
      <li>
        <categoriesChildhood>
          <li>Tribal</li>
        </categoriesChildhood>
        <categoriesAdulthood>
          <li>TribalHunter</li>
        </categoriesAdulthood>
      </li>
    </backstoryFiltersOverride>
    <gearHealthRange>0.5~1.8</gearHealthRange>
    <apparelMoney>200~300</apparelMoney>
    <apparelRequired>
      <li>Apparel_WarVeil</li>
    </apparelRequired>
    <weaponMoney>100~100</weaponMoney>
    <weaponTags>
      <li>NeolithicRangedDecent</li>
    </weaponTags>
    <xenotypeSet>
      <xenotypeChances>
        <Moka_Wildlox>0.5</Moka_Wildlox>
      </xenotypeChances>
    </xenotypeSet>
    <disallowedTraits>
      <li>Brawler</li>
    </disallowedTraits>
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <initialWillRange>2~4</initialWillRange>
    <initialResistanceRange>10~16</initialResistanceRange>
  </PawnKindDef>
  
  <PawnKindDef ParentName="Moka_Tribelox_Hunter">
    <defName>Moka_Tribelox_Trader</defName>
    <label>trader</label>
    <trader>true</trader>
    <apparelRequired Inherit="False">
      <li>Apparel_TribalHeaddress</li>
    </apparelRequired>
    <initialWillRange>2~4</initialWillRange>
    <initialResistanceRange>9~15</initialResistanceRange>
  </PawnKindDef>
  
  <!-- Chief Tiers -->
  <PawnKindDef ParentName="TribalChiefBase">
    <defName>Moka_Tribelox_ChiefMelee</defName>
    <label>berserker chief</label>
    <defaultFactionType Inherit="False">Moka_TribeLoxCivil</defaultFactionType>
    <weaponTags>
      <li>NeolithicMeleeAdvanced</li>
      <li>MedievalMeleeAdvanced</li>
    </weaponTags>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <techHediffsChance>0.8</techHediffsChance>
    <techHediffsMoney>400~600</techHediffsMoney>
    <xenotypeSet>
      <xenotypeChances>
        <Moka_Pawloc>0.7</Moka_Pawloc>
      </xenotypeChances>
    </xenotypeSet>
    <initialResistanceRange>38~58</initialResistanceRange>
  </PawnKindDef>
  
  <PawnKindDef ParentName="TribalChiefBase">
    <defName>Moka_Tribelox_ChiefRanged</defName>
    <label>archer chief</label>
    <defaultFactionType Inherit="False">Moka_TribeLoxCivil</defaultFactionType>
    <weaponTags>
      <li>NeolithicRangedChief</li>
    </weaponTags>
    <techHediffsTags>
      <li>Poor</li>
    </techHediffsTags>
    <techHediffsChance>0.8</techHediffsChance>
    <techHediffsMoney>400~600</techHediffsMoney>
    <xenotypeSet>
      <xenotypeChances>
        <Moka_Wildlox>0.7</Moka_Wildlox>
      </xenotypeChances>
    </xenotypeSet>
    <disallowedTraits>
      <li>Brawler</li>
    </disallowedTraits>
    <initialResistanceRange>16~26</initialResistanceRange>
  </PawnKindDef>
  
</Defs>