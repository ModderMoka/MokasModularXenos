    <xenotypeSet>
      <xenotypeChances>
        <Moka_Baseloc>0.75</Moka_Baseloc>
        <Moka_Pawloc>0.15</Moka_Pawloc>
        <Moka_Wildlox>0.1</Moka_Wildlox>
        <Impid>0.025</Impid>
        <Neanderthal>0.025</Neanderthal>
      </xenotypeChances>
    </xenotypeSet>
		<requiredMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">NaturePrimacy</li>
		</requiredMemes>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Structure_Ideological</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Transhumanist</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
			<li MayRequire="sarg.alphaanimals">AA_BiologicalCorruptors</li>
			<li MayRequire="Sarg.AlphaMemes">AM_Madness</li>
			<li MayRequire="Sarg.AlphaMemes">AM_Sadist</li>
			<li MayRequire="Sarg.AlphaMemes">AM_BiologicalDefilers</li>
			<li MayRequire="Sarg.AlphaMemes">AM_Sadist</li>
			<li MayRequire="Sarg.AlphaMemes">AM_Gladiator</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_HardcoreIndustrialism</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Progressive</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Republic</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Bushido</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_BloodCourt</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_CityBuilders</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_MechanoidSupremacy</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_InsectoidSupremacy</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Anonymity</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Nationalist</li>
			<li MayRequire="VanillaExpanded.VMemesE">VME_Nationalist</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Raider</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Supremacist</li>
    </disallowedMemes>
    <disallowedPrecepts>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_CoveringAnythingButGroinDisapproved</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_CoveringAnythingButGroinDisapproved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">BodyMod_Approved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Skullspike_Desired</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">MarriageName_AlwaysWomans</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">MarriageName_AlwaysMans</li>
